extends layout

block content
  .w3-top.w3-hide-small.w3-black
      ul#myNavbar.w3-navbar.w3-xlarge.w3-black.w3-opacity.w3-hover-opacity-off
        li
          a(href='/home') HOME
        li
          a(href='/restaurants') RESTAURANTS
        li
          a(href='/restaurants/create') ADD A RESTAURANT
        li
          a(href='/about') ABOUT
        .w3-display-right
              li
                a(href='/auth/login') LOGIN
              li
                a(href='/auth/register') REGISTER
  .w3-container.w3-white(style='font-family:Roboto;')
    form.w3-white.w3-large(role="form", action="/auth/register", method="post" style='width:30%; margin-top:5%; margin-left:35%;')
      .w3-container.w3-padding.w3-black
        h2.w3-center Register Now!
      .w3-container.w3-blue-gray.w3-center
        if (error)
          strong.w3-text-red #{error}
        p Username:
        
          input.w3-center.w3-input.w3-border(name='username', type='text', placeholder='e.g. masteremman', style='width:60%; margin-left:20%;' )
        p Password:
        
          input.w3-center.w3-input.w3-border(name='password',type='password', placeholder='Enter a password', style='width:60%; margin-left:20%;')
        p First Name:
        
          input.w3-center.w3-input.w3-border(name='first_name', type='text', placeholder='e.g. Emmanuel', style='width:60%; margin-left:20%;')
        p Last Name:
        
          input.w3-center.w3-input.w3-border(name='last_name',type='text', placeholder='e.g. Nipal Jr.', style='width:60%; margin-left:20%;')
        p Email:
        
          input.w3-center.w3-input.w3-border(name='email',type='text', placeholder='e.g. example@example.com', style='width:70%; margin-left:15%;')
        p.w3-center
          a.btn.btn-link(href="/") Cancel  
          button.w3-btn-block.w3-padding.w3-black.w3-opacity.w3-hover-opacity-off.w3-center(type='submit', value='Register', style='width:30%;') Register
