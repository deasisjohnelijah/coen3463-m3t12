extends layout

block content
    .w3-top.w3-hide-small
      ul#myNavbar.w3-navbar.w3-xlarge.w3-black.w3-opacity.w3-hover-opacity-off
        li
          a(href='/') HOME
        li
          a(href='/restaurants') RESTAURANTS
        li
          a(href='/restaurants/create') ADD A RESTAURANT
        li
          a(href='/about') ABOUT
    .w3-container.w3-padding-64.w3-blue-grey.w3-xlarge
      .w3-content
        a(href='https://www.zomato.com/manila/top-restaurants')
            img.w3-circle.w3-right(src='https://b.zmtcdn.com/images/logo/zomato_logo.svg', style='width:150px', alt='Zomato')
        h1.w3-center.w3-jumbo(style='margin-bottom:64px') Edit Restaurant

        p.w3-xxlarge
          strong You are editing the information of the restaurant

        form(method='POST', action='/restaurant/#{edit._id}/edit')
          p
            input.w3-input.w3-padding-16.w3-border(type='text', value='#{edit.name}', required='', name='name')
          p
            input.w3-input.w3-padding-16.w3-border(type='text', value='#{edit.address}', required='', name='address')
          p
            input.w3-input.w3-padding-16.w3-border(type='text', value='#{edit.description}', required='', name='description')
          p
            input.w3-input.w3-padding-16.w3-border(type='text', value='#{edit.cuisine}', required='', name='cuisine')
          p
            input.w3-input.w3-padding-16.w3-border(type='text', value='#{edit.maplink}', required='', name='maplink')
          p
            input.w3-input.w3-padding-16.w3-border(type='text', value='#{edit.contact}', required='', name='contact')
          p
            input.w3-input.w3-padding-16.w3-border(type='text', value='#{edit.zomato}', required='', name='zomato')
          p
            input.w3-input.w3-padding-16.w3-border(type='text', value='#{edit.photo}', required='', name='photo')
          
          p
            button.w3-btn-block.w3-padding(type='submit') Update Restaurant
    footer.w3-center.w3-black.w3-padding-48.w3-xxlarge
      i.fa.fa-github.w3-hover-text-yellow
      i.fa.fa-facebook-official.w3-hover-text-indigo
      i.fa.fa-instagram.w3-hover-text-purple
      i.fa.fa-pinterest-p.w3-hover-text-red
      i.fa.fa-twitter.w3-hover-text-light-blue
      i.fa.fa-linkedin.w3-hover-text-indigo
      p 
